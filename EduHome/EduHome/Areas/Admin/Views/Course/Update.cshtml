@model CourseViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Course</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Name" >Name</label>
                        <textarea  class="form-control"  placeholder="Name" asp-for="Name" rows="4"></textarea>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input class="form-control" placeholder="Photo" asp-for="Photo" accept="image/*">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Description" >Description</label>
                        <textarea class="form-control" placeholder="Description" asp-for="Description" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AboutDescription" >AboutDescription</label>
                        <textarea class="form-control" placeholder="AboutDescription" asp-for="AboutDescription" rows="4"></textarea>
                        <span asp-validation-for="AboutDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CertificaitonDescription" >Certificaiton Description</label>
                        <textarea class="form-control" placeholder="CertificaitonDescription" asp-for="CertificaitonDescription" rows="4"></textarea>
                        <span asp-validation-for="CertificaitonDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StartDay" >Start Day</label>
                        <input type="date" class="form-control" placeholder="StartDay" asp-for="StartDay">
                        <span asp-validation-for="StartDay" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DurationTime" >Duration Time</label>
                        <input type="time" class="form-control" placeholder="DurationTime" asp-for="DurationTime">
                        <span asp-validation-for="DurationTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ApplyDescription" >Apply Description</label>
                        <textarea class="form-control" placeholder="ApplyDescription" asp-for="ApplyDescription" rows="4"></textarea>
                        <span asp-validation-for="ApplyDescription" class="text-danger"></span>
                    </div>

                      <div class="form-group">
                        <label asp-for="LessonDurationTime" >Lesson Duration Time</label>
                        <textarea class="form-control" placeholder="LessonDurationTime" asp-for="LessonDurationTime" rows="4"></textarea>
                        <span asp-validation-for="LessonDurationTime" class="text-danger"></span>
                    </div>

                    
                      <div class="form-group">
                        <label asp-for="SkillLevel" >Skill Level</label>
                        <textarea class="form-control" placeholder="SkillLevel" asp-for="SkillLevel" rows="4"></textarea>
                        <span asp-validation-for="SkillLevel" class="text-danger"></span>
                    </div>

                    
                      <div class="form-group">
                        <label asp-for="Language" >Language</label>
                        <textarea class="form-control" placeholder="Language" asp-for="Language" rows="4"></textarea>
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>

                      <div class="form-group">
                        <label asp-for="studentCapacity" >Student Capacity</label>
                        <textarea class="form-control" placeholder="studentCapacity" asp-for="studentCapacity" rows="4"></textarea>
                        <span asp-validation-for="studentCapacity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Assestments" >Assestments</label>
                        <textarea class="form-control" placeholder="Assestments" asp-for="Assestments" rows="4"></textarea>
                        <span asp-validation-for="Assestments" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <textarea class="form-control" placeholder="Price" asp-for="Price" rows="4"></textarea>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>


                <div class="form-group">
                    <label>Category</label>
                    <select class="form-control" name="categoryId" id="ParentCategory">
                            <option value="0">--Select Category--</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.ID" selected="@(item.Id == Model.ParentCategories )">@item.Name</option>
                        }
                    </select>
                </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <partial name="_CKEditorPartial" />
}