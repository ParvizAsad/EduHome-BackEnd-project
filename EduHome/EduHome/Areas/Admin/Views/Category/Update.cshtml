@model Categories
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <h2>Update Category</h2>
    <form method="post">
        
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Category name</label>
             <textarea class="form-control" placeholder="@Model.Name" asp-for="@Model.Name" rows="4"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />
    <partial name="_CKEditorPartial" />
}

