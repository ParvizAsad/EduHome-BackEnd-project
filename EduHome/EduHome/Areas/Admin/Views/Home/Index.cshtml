@model List<Bios>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-success" asp-controller="Home" asp-action="Create">
    Create
</a>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category List</h4>
                <div class="table-responsive">
                    <table id="tab" class="table">
                        <thead>
                            <tr>
                                <th>Logo</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                              @foreach (var item in Model)
                           {
                                <tr>
                                    <td>  <img src="~/img/@item.Logo" style="width: 150px; height: 150px;" /></td>
                                       <td>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-danger "  asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                           }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
