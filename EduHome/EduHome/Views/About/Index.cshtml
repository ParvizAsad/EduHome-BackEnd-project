
@{
    AboutViewModel aboutVM = Model;

ViewData["Title"] = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">	
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2> 
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>    
<!-- Banner Area End -->
<!-- About Start -->
@await Component.InvokeAsync("About")
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in aboutVM.Teachers)
           {
             <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher">
                    <div class="single-teacher-img">
                        <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/teacher/@item.ImagePath" alt="teacher"></a>  
                    </div>
                    <div class="single-teacher-content text-center">
                        <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></h2>
                        <h4>@item.Job</h4>
                        <ul>
                            <li><a href="@item.FacebookUrl"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="@item.PinterestUrl"><i class="zmdi zmdi-pinterest"></i></a></li>
                            <li><a href="@item.VkontaktUrl"><i class="zmdi zmdi-vimeo"></i></a></li>
                            <li><a href="@item.TwitterUrl"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
           }


        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
@await Component.InvokeAsync("Testimontal")
<!-- Testimonial Area End -->
<!-- Notice Start -->
@await Component.InvokeAsync("Notice")
<!-- Notice End -->

