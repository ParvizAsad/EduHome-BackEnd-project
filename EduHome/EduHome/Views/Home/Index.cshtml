<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
                <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/@homeVM.Homes.EventIcon" alt="section-title">
                    <h2>@homeVM.Homes.EventTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
                @foreach (var item in @homeVM.Events)
               {
                    <div class="col-md-6 col-sm-12 col-xs-12">
                         <div class="single-event hidden-sm hidden-xs">
                            <div class="event-img">
                                <a asp-controller="Event" asp-action="Detail" asp-route-id="@item.ID"><img src="~/img/event/@item.EventImage" alt="event"></a>
                            </div>
                            <div class="event-content text-left">
                                <h3>@item.EventDate.ToString("dd MMMM yyyy")</h3>
                                <h4><a asp-controller="Event" asp-action="Detail"  asp-route-id="@item.ID">@item.Title</a></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("h:mm tt") -  @item.EndTime.ToString("h:mm tt").</li>
                                    <li><i class="fa fa-map-marker"></i>@item.Location</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="Detail"  asp-route-id="@item.ID">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
               }
        </div>
    </div>
</div>
<!-- Event Area End -->

<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center"
    style=" background: url(../img/testimonial/@homeVM.Homes.TestimontalBackgroundImage);
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            position: relative;">
@foreach (var item in @homeVM.Testimontials)
{
      <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/img/testimonial/@item.Image" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@item.Description</p>
                                <h4>@item.Name</h4>
                                <h5>@item.Position</h5>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
}
</div>
<!-- Testimonial Area End -->

<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/@homeVM.Homes.BlogIcon" alt="section-title">
                    <h2>@homeVM.Homes.BlogTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in @homeVM.Blogs)
           {
             <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-blog">
                    <div class="blog-img">
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/blog/@item.ImagePath" alt="blog"></a>
                        <div class="blog-hover">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-top">
                            <p>@item.Writer  /  @item.Date.ToString("dd MMMM yy")  /  <i class="fa fa-comments-o"></i> 4</p>
                        </div>
                        <div class="blog-bottom">
                            <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h2>
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                        </div>
                    </div>
                </div>
            </div> 
           }


        </div>
    </div>
</div>
<!-- Blog Area End -->
