
@{
    HomeViewModel homeVM = Model;
    ViewData["Title"] = "Index";
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area two"> 
<div class="slider-owl owl-theme owl-carousel"> 
    @foreach (var item in homeVM.Sliders)
   {
 <!-- Start Slingle Slide -->
<div class="single-slide item" style="background-image: url(img/slider/@item.Path)">
    <!-- Start Slider Content -->
    <div class="slider-content-area">  
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1"> 
                    <div class="slide-content-wrapper">
                        <div class="slide-content text-center">
                            <h2>@item.Title</h2>
                            <p>@item.SubTitle </p>
                            <a class="default-btn"asp-controller="About" asp-action="Index">Learn more</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start Slider Content -->
</div>
<!-- End Slingle Slide -->      
   }

</div>
</section>
<!-- Background Area End -->

<!-- About Start -->
@await Component.InvokeAsync("About")

<!-- About End -->

<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center" 
     style="  position: relative;
              background: url(../img/course/@homeVM.Homes.CourseBackgroundImage);
              background-size: cover;
              background-repeat: no-repeat;
              background-position: center center;
              background-attachment: fixed;" >
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/@homeVM.Homes.CourseIcon" alt="section-title">
                    <h2>@homeVM.Homes.CourseTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in homeVM.Courses)
           {
             <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-course">
                    <div class="course-img">
                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/course/@item.ImagePath" alt="course">
                            <div class="course-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </a>
                    </div>
                    <div class="course-content">
                        <h3><a asp-controller="Course" asp-action="Detail">@item.Name</a></h3>
                        <p>@item.Description</p>
                        <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                    </div>   
                </div>
            </div> 
           }

        </div>
    </div>
</div>
<!-- Courses Area End -->

<!-- Notice Start -->
@await Component.InvokeAsync("Notice")

<!-- Notice End -->

<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
                <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/@homeVM.Homes.EventIcon" alt="section-title">
                    <h2>@homeVM.Homes.EventTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
                @foreach (var item in @homeVM.Events)
               {
                    <div class="col-md-6 col-sm-12 col-xs-12">
                         <div class="single-event hidden-sm hidden-xs">
                            <div class="event-img">
                                <a asp-controller="Event" asp-action="Detail" asp-route-id="@item.ID"><img src="~/img/event/@item.EventImage" alt="event"></a>
                            </div>
                            <div class="event-content text-left">
                                <h3>@item.EventDate.ToString("dd MMMM yyyy")</h3>
                                <h4><a asp-controller="Event" asp-action="Detail"  asp-route-id="@item.ID">@item.Title</a></h4>
                                <ul>
                                    <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("h:mm tt") -  @item.EndTime.ToString("h:mm tt").</li>
                                    <li><i class="fa fa-map-marker"></i>@item.Location</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="Detail"  asp-route-id="@item.ID">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
               }
        </div>
    </div>
</div>
<!-- Event Area End -->

<!-- Testimonial Area Start -->
@await Component.InvokeAsync("Testimontal")
<!-- Testimonial Area End -->

<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/@homeVM.Homes.BlogIcon" alt="section-title">
                    <h2>@homeVM.Homes.BlogTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in @homeVM.Blogs)
           {
             <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-blog">
                    <div class="blog-img">
                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/blog/@item.ImagePath" alt="blog"></a>
                        <div class="blog-hover">
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-link"></i></a>
                        </div>
                    </div>
                    <div class="blog-content">
                        <div class="blog-top">
                            <p>@item.Writer  /  @item.Date.ToString("dd MMMM yy")  /  <i class="fa fa-comments-o"></i> 4</p>
                        </div>
                        <div class="blog-bottom">
                            <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h2>
                            <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                        </div>
                    </div>
                </div>
            </div> 
           }


        </div>
    </div>
</div>
<!-- Blog Area End -->
