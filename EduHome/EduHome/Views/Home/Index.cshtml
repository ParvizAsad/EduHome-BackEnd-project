
@{
    HomeViewModel homeVM = Model;
    ViewData["Title"] = "Index";
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area two"> 
<div class="slider-owl owl-theme owl-carousel"> 
    @foreach (var item in homeVM.Sliders)
   {
 <!-- Start Slingle Slide -->
<div class="single-slide item" style="background-image: url(img/slider/@item.Path)">
    <!-- Start Slider Content -->
    <div class="slider-content-area">  
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1"> 
                    <div class="slide-content-wrapper">
                        <div class="slide-content text-center">
                            <h2>@item.Title</h2>
                            <p>@item.SubTitle </p>
                            <a class="default-btn"asp-controller="About" asp-action="Index">Learn more</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start Slider Content -->
</div>
<!-- End Slingle Slide -->      
   }

</div>
</section>
<!-- Background Area End -->

<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw( @homeVM.Abouts.Title)</h2>
                    <p>@homeVM.Abouts.SubTitle </p>
                    <a class="default-btn"asp-controller="About" asp-action="Index">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/img/about/@homeVM.Abouts.ImagePath" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center" 
     style="  position: relative;
              background: url(../img/course/@homeVM.Homes.CourseBackgroundImage);
              background-size: cover;
              background-repeat: no-repeat;
              background-position: center center;
              background-attachment: fixed;" >
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/img/icon/@homeVM.Homes.CourseIcon" alt="section-title">
                    <h2>@homeVM.Homes.CourseTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in homeVM.Courses)
           {
             <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="single-course">
                    <div class="course-img">
                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/course/@item.ImagePath" alt="course">
                            <div class="course-hover">
                                <i class="fa fa-link"></i>
                            </div>
                        </a>
                    </div>
                    <div class="course-content">
                        <h3><a asp-controller="Course" asp-action="Detail">@item.Name</a></h3>
                        <p>@item.Description</p>
                        <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">read more</a>
                    </div>   
                </div>
            </div> 
           }

        </div>
    </div>
</div>
<!-- Courses Area End -->

