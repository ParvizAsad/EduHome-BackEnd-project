@model Event
@{
ViewData["Title"] = "Detail";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">	
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2> 
                        </div> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>    
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/img/event/@Model.EventImage" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.EventDate.ToString("dd MMMM")</h3>  
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.Title</h2>
                        <ul>
                            <li><span>time : </span>@Model.StartTime.ToString("h:mm tt") - @Model.EndTime.ToString("h:mm tt")</li>
                            <li><span>venue : </span>Cristal Centre, 254 New Yourk</li>
                        </ul>
                        <p>@Model.EventDetail.Description</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (var item in @ViewBag.SpikerList)
                           {
                               <div class="single-speaker">
                                <div class="speaker-img">
                                    <img src="~/img/event/@item.ImagePath" alt="speaker">
                                </div>
                                <div class="speaker-name">
                                    <h5>@item.Name</h5>
                                    <p>@item.Job</p>
                                </div>
                            </div>
                           }
                        </div>
                    </div>    
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                       
                        <p> @Model.EventDetail.ReplyText </p>
                        <form id="contact-form"  method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                          @foreach (var item in ViewBag.Categories)
                         {
                           <li><a asp-controller="Category" asp-action="Detail" asp-route-id="@item.ID">@Html.Raw(@item.Name)</a></li>
                         }
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a asp-controller="Blog" asp-action="Detail" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2> 
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        @foreach (var item in @ViewBag.Blogs)
                       {
                        <div class="single-post mb-30">
                            <div class="single-post-img">
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/blog/@item.ImagePath" style="width:50px; height:50px;" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></h4>
                                <p>@item.Writer  /  @item.Date.ToString("MMMM dd yyyy")</p>
                            </div>
                        </div>
                       }
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a asp-controller="Blog" asp-action="Detail" class="mr-10 mb-10">course</a>
                            <a asp-controller="Blog" asp-action="Detail" class="mr-10 mb-10">education</a>
                            <a asp-controller="Blog" asp-action="Detail" class="mb-10">teachers</a>
                            <a asp-controller="Blog" asp-action="Detail" class="mr-10">learning</a>
                            <a asp-controller="Blog" asp-action="Detail" class="mr-10">university</a>
                            <a asp-controller="Blog" asp-action="Detail">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
