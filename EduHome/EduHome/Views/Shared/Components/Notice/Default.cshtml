@{
    HomeViewModel homeVM = Model;
}

<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>@homeVM.Homes.NoticeVideoTitle</h3>
                    <div class="notice-video" 
                    style="  background: rgba(0, 0, 0, 0) url(../img/notice/@homeVM.Homes.NoticeImage) repeat scroll 0 0;
                                background-size: cover;
                                background-repeat: no-repeat;
                                background-position: center center;
                                position: relative;
                                height: 382px;
                                width: 100%; ">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@homeVM.Homes.YoutubeUrL">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div> 
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">  
                    <h3>@homeVM.Homes.NoticeTitles</h3>
                    <div class="notice-left">
                        @foreach (var item in homeVM.Events)
                       {
                         <div class="single-notice-left mb-23 pb-20">
                            <h4>5, June 2017</h4>
                            <h4>@item.EventDate.ToString("dd MMMM yyyy")</h4>
                            <p>@item.Title </p>
                        </div>
                       }
                        
                    </div>
                </div>    
            </div>
        </div>
    </div>
</section>